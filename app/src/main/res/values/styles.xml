<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/selector_bcg_button</item>
        <item name="android:textAppearance">@style/TextDefault.Big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:background">@null</item>
    </style>


</resources>